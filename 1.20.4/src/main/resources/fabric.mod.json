{
	"schemaVersion": 1,
	"id": "spotify-integration-mod",
	"version": "${version}",
	"name": "Spotify Integration Mod",
	"description": "Creates a HUD element in the top left corner that shows what's currently playing on Spotify.",
	"authors": [
		"oofSauce"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "MIT",
	"icon": "assets/spotify-integration-mod/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"net.sauce.spotifyintegrationmod.SpotifyIntegrationMod"
		],
		"client": [
			"net.sauce.spotifyintegrationmod.SpotifyIntegrationModClient"
		],
		"fabric-datagen": [
			"net.sauce.spotifyintegrationmod.SpotifyIntegrationModDataGenerator"
		]
	},
	"mixins": [
		"spotify-integration-mod.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.15.6",
		"minecraft": "~1.20.4",
		"java": ">=17",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}